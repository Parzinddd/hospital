page{
    background-color: blanchedalmond;
}

.line{
    margin-left: auto;
    margin-right: auto;
    width: 85vw;
    height: 0.1rpx;
    background-color: rgb(163, 160, 160);
}

.news-block{
    border-radius:20px;
    width: 85vw;
    margin: 5vw auto auto;
    background-color:  #FBFBEA;
    display: flex;
    flex-direction: column;
}

.news-header{
    height: 15vw;
    display: flex;
    flex-direction: row;
}

.date{
    width: 18vw;
    border-radius:20px 0 0 0;
    font-size: 16pt;
    background-color: #5fc0f8;
    padding-top:4vw;
    padding-left: 4vw;
}

.title{
    margin:auto auto auto auto;
    font-size: 16pt;
}


.content{
    width: 85vw;
    justify-content: center;
    color: #333333;
    font-size: 13px;
    display: block;
    height: 15vw;
    align-items: center;
    max-height: 15vw;
}