page{
    background-color: rgb(248, 248,248);
}

.line{
    height: 0.1rpx;
    width: 80vw;
    margin-left:auto;
    margin-right: auto;
    background-color:rgb(184, 180, 180);
}

.join_block{
    border-radius: 20px;
    margin: 4vw auto auto;
    background-color:white;
    width: 90vw;
}

.projectHeader{
    height: 15vw;
}

.projectName{ 
    height: 15vw;
    display: flex;
    align-items: center;
    float: left;
    font-size: 13pt;
    margin-left: 3vw;
}
.projectResult:hover{
    background-color: white;
}

.projectResult{
    align-items: center;
    height: 15vw;
    display: flex;
    float: right;
    color:rgb(52, 155, 224);
    font-size: 12pt;
    font-weight: 300;
    margin-right: 3vw;
}

.projectInfo{
    font-size: 10pt;
}

.projectDate{
    margin-left: 4vw;
    float: left;
    color: rgb(107, 107, 107);

}

.projectStatus{
    margin-right: 4vw;
    color: rgb(0, 25, 250);
    float: right;
}